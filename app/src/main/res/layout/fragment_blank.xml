<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.example.robin.app"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingTop="50sp"
    android:paddingStart="20sp"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:id="@+id/log"
    tools:context=".Secondsignup">


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/supply"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:textAlignment="center">
    </android.support.v7.widget.AppCompatSpinner>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/phase"
        android:layout_width="150sp"
        android:layout_toEndOf="@+id/supply"
        android:layout_marginStart="20sp"
        android:layout_height="wrap_content"
        android:textAlignment="center">
    </android.support.v7.widget.AppCompatSpinner>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/load"
        android:layout_width="150sp"
        android:layout_below="@id/supply"
        android:layout_marginTop="30sp"
        android:layout_height="wrap_content"
        android:textAlignment="center">
    </android.support.v7.widget.AppCompatSpinner>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/meter"
        android:layout_width="150sp"
        android:layout_below="@+id/phase"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/load"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:textAlignment="center">
    </android.support.v7.widget.AppCompatSpinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/submit"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/meter"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="#fff"/>

</RelativeLayout>
